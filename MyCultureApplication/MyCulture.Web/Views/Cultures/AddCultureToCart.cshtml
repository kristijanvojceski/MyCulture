@model MyCulture.Domain.DTO.AddToCultureCartDto

@{
    ViewData["Title"] = "Add To Shopping Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Selected Culture to User Culture Card:</h1>

<hr />

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddCultureToCart" method="post">
            <input type="hidden" asp-for="CultureId" />
            <div class="form-group">
                <label asp-for="SelectedCulture.CultureName"></label>
                <input disabled asp-for="SelectedCulture.CultureName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>